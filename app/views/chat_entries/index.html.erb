<p id="notice"><%= notice %></p>

<h1>Listing Chat Entries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chat_entries.each do |chat_entry| %>
      <tr>
        <td><%= chat_entry.name %></td>
        <td><%= chat_entry.content %></td>
        <td><%= link_to 'Show', chat_entry %></td>
        <td><%= link_to 'Edit', edit_chat_entry_path(chat_entry) %></td>
        <td><%= link_to 'Destroy', chat_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chat entry', new_chat_entry_path %>
